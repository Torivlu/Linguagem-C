#include <stdio.h>

int main() {
    char nome[100];  // Define um array de caracteres para armazenar o nome

    // Solicita o nome ao usuário
    printf("Digite seu nome: ");
    fgets(nome, sizeof(nome), stdin);  // Usa fgets para ler a entrada (suporta espaços)

    // Exibe o nome na tela
    printf("Olá, %s", nome);

    return 0;
}
 
